datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// User model

model User {
  id                 String               @id @default(uuid())
  email              String               @unique
  password           String
  name               String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  folders            Folder[]
  chats              Chat[]
  refinedFiles       RefinedFile[]
  PasswordResetToken PasswordResetToken[]
  files              File[]

  @@index([email])
}

// Folder model that will hold files
model Folder {
  id           String        @id @default(uuid())
  name         String
  content      String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  files        File[]
  isStarred    Boolean?      @default(false)
  tags         Tag[]         @relation("FolderToTag")
  refinedFiles RefinedFile[]

  @@unique([name, userId])
  @@index([userId])
}

// Refined file that will be a file that has been changed with wolfram alpha api and/or chatgpt api

model RefinedFile {
  id        String   @id @default(uuid())
  original  String
  refined   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  folderId  String
  folder    Folder   @relation(fields: [folderId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  fileId    String   @unique
  file      File     @relation(fields: [fileId], references: [id])

  @@index([folderId, userId, fileId])
  @@index([userId, fileId])
}

// Tags for files and folders for search methods
model Tag {
  id      String   @id @default(uuid())
  name    String   @unique
  files   File[]   @relation("FileToTag")
  folders Folder[] @relation("FolderToTag")
}

// Chat model that will hold messages with links to files

model Chat {
  id           String        @id @default(uuid())
  title        String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userId       String
  user         User          @relation(fields: [userId], references: [id])
  chatMessages ChatMessage[]
  files        File[]
  links        Link[]

  @@index([userId])
}

// File model that will hold files
model File {
  id          String       @id @default(uuid())
  name        String
  content     String?
  type        String?
  s3Path      String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  folderId    String?
  math        Boolean      @default(false)
  folder      Folder?      @relation(fields: [folderId], references: [id])
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  chatId      String?
  chat        Chat?        @relation(fields: [chatId], references: [id])
  refinedFile RefinedFile?
  tags        Tag[]        @relation("FileToTag")
  links       Link[]

  @@index([userId])
  @@index([folderId])
  @@index([chatId])
}

// Link model that represents a link between a chat and a file

model Link {
  id     String @id @default(uuid())
  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id])
  fileId String
  file   File   @relation(fields: [fileId], references: [id])

  @@index([chatId, fileId])
  @@index([fileId])
}

// ChatMessage model that will hold all of the messages between user and ai
model ChatMessage {
  id        String   @id @default(uuid())
  role      String
  content   String   @db.Text
  createdAt DateTime @default(now())
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])

  @@index([chatId])
}

// Password reset token model

model PasswordResetToken {
  id        String    @id @default(uuid())
  token     String    @unique
  createdAt DateTime  @default(now())
  resetAt   DateTime?
  user      User      @relation(fields: [userId], references: [id])
  userId    String

  @@index([userId])
}

// File type enum

enum FileType {
  PDF
  IMAGE_JPEG
  IMAGE_PNG
  TEXT
  HEIC
  HEIF
}
